@{
    ViewData["Title"] = "Home Page";
}

    <div class="container-fluid">

        <h1>Images</h1>

        <a href="/FileClient/Index" target="_blank">Upload Images</a>

        <div class="row" *ngIf="images.length > 0">
            <img *ngFor="let image of images;"
                 width="150" style="margin-right:5px"
                 id="signalRImgs"
                 [src]="image.imageHeaders + image.imageBinary">
        </div>

        <script src="~/lib/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/imgPlayer.js"></script>
        <script src="~/js/ImageMessage.js"></script>
    </div>
